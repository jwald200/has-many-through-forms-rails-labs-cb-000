<%= form_for @post do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %><br>
  <%= form.label :content %>
  <%= form.text_area :content %><br>
  <%= form.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <%= form.fields_for :categories, @post.categories.build do |categories_fields| %>
    <%= categories_fields.label :name, 'New category name' %>
    <%= categories_fields.text_field :name %>
  <% end %>
  <%= form.submit %>
<% end %>
